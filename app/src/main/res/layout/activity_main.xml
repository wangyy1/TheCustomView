<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.jzxl.thecustomview.MainActivity">    <com.jzxl.thecustomview.widget.CountDownView        android:id="@+id/countDownView1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        app:cd_animator_time="8"        app:cd_animator_time_unit="秒"        app:cd_arc_color="#000000"        app:cd_arc_width="3dp"        app:cd_bg_color="#FF4081"        app:cd_circle_radius="40dp"        app:cd_location="left"        app:cd_retreat_type="forward"        app:cd_text_color="#000000"        app:cd_text_size="14sp"/>    <Button        android:id="@+id/button"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="bottom"        android:text="开始"/>    <Button        android:id="@+id/button1"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_gravity="bottom"        android:text="打开"/>    <com.jzxl.thecustomview.widget.StretchableFloatingButton        android:id="@+id/stretchableFloatingButton"        android:layout_margin="10dp"        android:layout_width="match_parent"        android:layout_height="50dp"        app:bac_color="#ff0"        app:close_icon="@mipmap/icon_2"        app:inner_circle_color="@color/black"        app:open_icon="@mipmap/icon"        app:speed="60"        app:text="地铁／景区／商圈／城市"        app:text_color="@color/black"        app:text_size="16"        app:degrees="180"></com.jzxl.thecustomview.widget.StretchableFloatingButton></LinearLayout>